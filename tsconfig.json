{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]

}