{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2020"],
      "types": ["node"], 
      "typeRoots": ["./node_modules/@types"],
      "outDir": "./dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
  }